<li>
  <span class="content"><%= klink.description %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(klink.created_at) %> ago.
  </span>
  <% if current_user?(klink.user) %>
    <%= link_to "delete", klink, method: :delete, confirm: "Are you sure?", title: klink.description %>
  <% end %>
</li>